/**index.wxss**/
.fileDeliveryDetail {
  min-height: 100vh;
  background: #F5F7FA;
}
.topCont{
    width: 100%;
    height: 252rpx;
    background: linear-gradient(90deg, #057DFF 0%, #469FFF 100%);
    display: flex;
    justify-content: space-between;
    padding: 45rpx 120rpx 0 82rpx;
    box-sizing: border-box;
}
.topCont .left{
    font-size: 22rpx;
    color: #FFFFFF;
}
.left .title{
    font-size: 30rpx;
}
.left text{
    display: block;
    margin: 6rpx 0 0;
}
.topCont image{
    flex: 0 0 86rpx;
    height: 87rpx;
    margin-left: 43rpx;
}
.serviceLog{
    width: 686rpx;
    min-height: 193rpx;
    background: #FFFFFF;
    border-radius: 8rpx;
    margin: -49rpx auto 30rpx;
}
.headerBox{
    line-height: 76rpx;
    border-bottom: 1px solid #E4EAF2;
    padding: 0 26rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
}
.headerBox .tit{
    font-size: 28rpx;
    color: #293D53;
    display: flex;
    align-items: center;
}
.headerBox .tit ::before{
    width: 4rpx;
    height: 28rpx;
    background: #057DFF;
    content: '';
    display: inline-block;
    margin-right: 17rpx;
}
.headerBox .nums{
    font-size: 24rpx;
color: #293D53;
}
.headerBox .nums text{
    color: #057DFF;
}
.headerBox .nums .time{
    color: #AAB1B9;
    margin-left: 21rpx;
}
.serviceLog .infos{
    padding: 10rpx 26rpx;
    box-sizing: border-box;
    font-size: 26rpx;
    color: #586471;
}
.serviceLog .infos text{
    display: block;
    line-height: 40rpx; 
}

.logs{
    width: 686rpx;
    min-height: 304rpx;
    background: #FFFFFF;
    border-radius: 8rpx;
    margin: auto;
}
.listBox{
    padding: 22rpx 15rpx;
    box-sizing: border-box;
}
.itemBox .topBox{
    line-height: 42rpx;
    overflow: hidden;
}
.itemBox .topBox .status{
    width: 40rpx;
    height: 40rpx;
    background: rgba(5, 125, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 21rpx;
    float: left;
}

.itemBox .topBox .status image{
    width: 28rpx;
    height: 28rpx;
}
.itemBox .topBox .defaultStatus{
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 21rpx;
    float: left;
}
.itemBox .topBox .defaultStatus .circle{
    width: 22rpx;
    height: 22rpx;
    border-radius: 50%;
    border: 6rpx solid #E4EAF2;
    box-sizing: border-box;
}
.topBox text{
    font-size: 28rpx;
    color: #293D53;
    display: inline;
    float: left;
}
.topBox .time{
    font-size: 24rpx;
    color: #AAB1B9;
    margin-left: 22rpx;
}
.tips{
    padding: 10rpx 40rpx;
    box-sizing: border-box;
    border-left: 1px solid #E4EAF2;
    font-size: 26rpx;
    color: #586471;
    margin-left: 19rpx;
}
.listBox > .itemBox:last-child .tips{
    border-left: 0;
}

.padbot{
    padding-bottom: 140rpx;
}
.botBtnBox{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 110rpx;
    background: #FFFFFF;
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.botBtnBox .btn{
    height: 86rpx;
    line-height: 84rpx;
    background: #FFFFFF;
    border-radius: 43rpx;
    border: 1px solid #057DFF;
    box-sizing: border-box;
    font-size: 26rpx;
    color: #057DFF;
    padding: 0 45rpx;
    cursor: pointer;
}
.botBtnBox .btn:nth-child(2){
    padding: 0 65rpx;
}
.botBtnBox .btn:last-child{
    background: #057DFF;
    color: #fff;
}

.rejectBox{
    width: 100%;
    min-height: 300rpx;
    background: #fff;
    padding: 32rpx;
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    left: 0;
    transition: all 1s linear;
}
.rejectBox textarea{
    width: 100%;
    background: #F5F7FA;
    padding: 15rpx;
    box-sizing: border-box;
    font-size: 26rpx;
    color: #586471;
}
.rejectBox .btns{
    display: flex;
    margin-top: 20rpx;
    font-size: 26rpx;
}
.rejectBox button{
    width: 40%;
    background: #F5F7FA;
    font-size: 26rpx;
    color: #586471;
    font-weight: normal;
}
.rejectBox button:last-child{
    background: #057DFF;
    color: #FFF;
}