/**index.wxss**/
.home {
  width: 100%;
  min-height: 100vh;
  background: #F5F7FA;
}
.container{
    width: 100%;
    padding: 30rpx;
    box-sizing: border-box;
    background: #F5F7FA;
}
.banner{
    width: 100%;
    height: 260rpx;
}
.banner image{
    width: 100%;
    height: 100%;
}
.notice{
  width: 100%;
  height: 86rpx;
  padding: 18rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 20rpx;
  margin: 40rpx 0;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #06274A;
  overflow: hidden;

}
.notice swiper,swiper-item{
    width: 100%;
    height: 86rpx;
    display: flex;
    align-items: center;
}
/* swiper-item text{
    font-size: 28rpx;
color: #06274A;
} */
.notice image{
  flex: 0 0 50rpx;
  height: 50rpx;
  margin-right: 14rpx;
}
.tabs{
  width: 100%;
  height: auto;
  background: #fff;
  border-radius: 20rpx;
  padding: 17rpx 40rpx 31rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
}
.tab{
  flex: 0 0 157rpx;
  font-size: 26rpx;
  color: #293D53;
  text-align: center;
  margin: 30rpx 70rpx 30rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tab image{
  width: 145rpx;
  height: 145rpx;
}
.tab text{
  display: block;
  margin-top: -17rpx;
}
.tabs :nth-child(3n){
  margin-right: 0rpx;
}
.advCont{
  width: 100%;
  height: 200rpx;
}
.advCont image{
  width: 100%;
  height: 200rpx;
}
