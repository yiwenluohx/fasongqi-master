  .result{
    font-size: 24rpx;
  }
  
  .noObj {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 150rpx;
    width: 100%;
    color: rgba(121, 121, 121, 100);
    font-size: 24rpx;
  }
  
  .activea {
    color: #255075;
  }
