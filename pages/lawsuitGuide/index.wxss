
.lawsuitGuidePage{
    background: #F5F7FA;
    min-height: 100vh;
}
.tab{
    display: flex;
    position: sticky;
    top: 0;
    z-index: 99;
    background: #F5F7FA;
  }
  .tab view{
    flex: 1;
    text-align: center; 
    padding: 20rpx 0; 
  }
  .tab view.active{
    /* background: blueviolet; */
    border-bottom: 4rpx solid #255075;
  }
  
  .title_one{
    width: 90%;
    margin: 0 auto;
    /* background: yellow; */
    font-size: 40rpx;
  }
  .text_one{
    width: 90%;
    margin: 0 auto;
    /* background: red; */
  }
  .Page {
    padding: 32rpx;
    /* background-color: #fff; */
  }
  
  .stepBox {
    padding: 8rpx 32rpx 32rpx 16rpx;
  }
   
  .box {
    box-sizing: border-box;
    width: 100%;
    padding-left: 20rpx;
  }
   
  .stepsList {
    box-sizing: border-box;
    width: 100%;
  }
   
  .sigleStep {
    box-sizing: border-box;
    width: 100%;
    padding: 0 0 0 28rpx;
    position: relative;
  }
   
  .sigleStep:active{
    background-color: #f1f1f1;
  }
   
  .greenSigleStep {
    box-sizing: border-box;
    width: 92.8%;
    /* height: 50px; */
    padding: 0 0 0 28rpx;
    border-left: 4rpx solid #999;
    position: relative;
  }
   
  .topShelter {
    width: 20rpx;
    height: 46rpx;
    /* background-color: #ffffff; */
    position: absolute;
    left: -10rpx;
    top: 0;
    z-index: 1;
  }
   
  .bottomShelter {
    width: 20rpx;
    height: 122rpx;
    /* background-color: #ffffff; */
    position: absolute;
    left: -10rpx;
    bottom: 0;
    z-index: 1;
  }
   
  .gray {
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: #969799;
    position: absolute;
    top: -10rpx;
    left: -13rpx;
  }
   
   
  .stepConBox {
    box-sizing: border-box;
    padding: 20rpx 20rpx 20rpx 0;
    color: #969799;
    font-size: 14px;
    line-height: 36rpx;
    position: relative;
    top: -44rpx;
  }
  #icon{
    background-color: #F5F7FA;
    position: absolute;
    top: -12rpx;
    left: -22rpx;
    z-index: 2;
    font-size: 40rpx;
  }
  #timebox {
    margin-top: 26rpx;
    font-size: 20px;
    /* background: ; */
  }
  .timeboxa {
    margin-top: 20rpx;
    font-size: 16px;
    /* display: block; */
    background: #255075;
    color: #fff;
    border-radius: 20rpx;
    margin-left: 40rpx;
    /* padding: 20rpx 0rpx 30rpx 30rpx ; */
    height: 100%;
    padding: 25rpx;
    display: flex;
    flex-wrap: wrap;
    /* padding: 30rpx 30rpx 30rpx 30rpx; */
  }
  .kl{
    width: 100%;
  }
