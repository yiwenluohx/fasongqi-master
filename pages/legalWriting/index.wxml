<form>
  <view class="text-bold padding bg-white">
    代写文书
  </view>
  <view class="cu-form-group ">
    <view class="title">纠纷类型:</view>
    <picker bindchange="bindJiufenChange" value="{{wenshuJiufenIndex}}" range-key="itemName" range="{{wenshuJiufenList}}">
      <view class="picker">
        {{wenshuJiufenList[wenshuJiufenIndex].itemName}}
      </view>
    </picker>
  </view>
  <view class="cu-form-group ">
    <view class="title">文书类型:</view>
    <picker bindchange="bindTypeChange" value="{{wenshuTypeIndex}}" range-key="itemName" range="{{wenshuTypeList}}">
      <view class="picker">
        {{wenshuTypeList[wenshuTypeIndex].itemName}}
      </view>
    </picker>
  </view>
  <view class="cu-form-group margin-top">
    <textarea maxlength="-1" bindinput="textareaAInput" placeholder="事实与理由描述"></textarea>
  </view>
  <view class="cu-bar bg-white margin-top">
    <view class="action">
      图片上传
    </view>
    <!-- <view class="action">
            {{imgList.length}}/4
        </view> -->
  </view>
  <view class="cu-form-group">
    <view class="grid col-4 grid-square flex-sub">
      <view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
        <image src='{{imgList[index]}}' mode='aspectFill'></image>
        <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
          <text class="cuIcon-close"></text>
        </view>
      </view>
      <view class="solids" bindtap="chooseImageWithConfirmation">
        <text class="cuIcon-cameraadd"></text>
      </view>
    </view>
  </view>
  <view class="cu-form-group">
    <view class="title">资料</view>
    <input placeholder="相关证据材料上传" name="input" value="{{fileName}}"></input>
    <button class='cu-btn bg-green shadow' style="width:80px" bindtap="doUploadFile">上传</button>
  </view>

</form>
<view class=" text-center margin-top">
  <view>
    <button class="cu-btn   bg-blue " bindtap="doSubmit">提交</button>
  </view>

</view>